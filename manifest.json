{
  "name": "flix-sync",
  "description": "Sync Netflix easily!",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*.netflix.com/*", "https://*.netflix.com/*"],
      "js": ["flix-sync.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "manifest_version": 3,
  "permissions": ["declarativeContent", "tabs"]
}
